<Window x:Class="_02_Button.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_02_Button"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="400">
    <Grid x:Name="GridButton" >
        <Grid.Background>
            <ImageBrush ImageSource="/pokemon-ecchi-misty-pokemon-1920x1200-wallpaper-Anime-.jpg" Stretch="None"/>
        </Grid.Background>
        <Button 
            x:Name="btn1"
            Click="Button_Click"
            Width="200" Height="100"
            >
            <Button.Background>
                <ImageBrush ImageSource="/pexels-james-wheeler-1519088.jpg" TileMode="None" Stretch="UniformToFill"/>
            </Button.Background>
        </Button>
    </Grid>
</Window>
